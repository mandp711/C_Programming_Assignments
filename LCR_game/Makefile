# Makefile for CSE 13S, Spring 2024, Assignment 2

# Do not edit this file

CC=clang
CFLAGS=-Wall -Wextra -Wstrict-prototypes -Werror -pedantic

# Ensure that executable supports debugging.
CFLAGS+=-gdwarf-4

.PHONY: all clean format test

all: lcr

lcr: lcr.o cse13s_random.o
	$(CC) $(CFLAGS) $^ -o $@

lcr.o: lcr.c names.h cse13s_random.h
	$(CC) $(CFLAGS) -c $<

cse13s_random.o: cse13s_random.c cse13s_random.h
	$(CC) $(CFLAGS) -c $<

format: 
	clang-format -i -style=file *.[ch]

clean:
	rm -f lcr *.o

test: tests
	bash runner.sh

